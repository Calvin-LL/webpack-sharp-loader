    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "jest-image-snapshot": "^4.2.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.1.2",
    "webpack": "^4.44.2"
