  "author": {
    "name": "Calvin Liang",
    "email": "npm@calvin.sh",
    "url": "https://calvin.sh"
  },
  "repository": "Calvin-LL/webpack-sharp-loader",
  "bugs": "https://github.com/Calvin-LL/webpack-sharp-loader/issues",
  "homepage": "https://github.com/Calvin-LL/webpack-sharp-loader",
  "license": "MIT",
